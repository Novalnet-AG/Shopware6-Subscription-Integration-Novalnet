{% block novalnet_sub_next_cycle_date_change %}

<sw-modal :title="$tc('novalnet-subscription.detail.cycleDate')"
          @modal-close="closeModal">


			{% block novalnet_sub_next_cycle_date_change_content %}
				<template #default>

					{% block novalnet_payment_order_refund_modal_content_info_text %}
						<sw-container columns="1fr"
									gap="0px 30px">
							<sw-datepicker 
										v-model="abo.nextDate"
										date-type="datetime-local"
										minDate = "abo.nextDate" 
										:label="$tc('novalnet-subscription.detail.nextDate')"
										:helpText="$tc('novalnet-subscription.detail.dateDescription')"/>
							<sw-text-field 
									v-model="reason"
									:label="$tc('novalnet-subscription.detail.reasonTitle')"
									:helpText="$tc('novalnet-subscription.detail.reasonDescription')">
							</sw-text-field>
						</sw-container>
					{% endblock %}
				</template>
			{% endblock %}

			{% block novalnet_sub_next_cycle_date_change_actions %}
			   <template #modal-footer>
					<sw-button @click="closeModal">
						{{ $tc('novalnet-subscription.detail.cancelLabel') }}
					</sw-button>

					<sw-button variant="primary" :disabled="disabled" :square="false" :block="false" :isLoading="false" @click="changeDate" >
						{{ $tc('novalnet-subscription.detail.confirmButton') }}
					</sw-button>
				</template>
			
			{% endblock %}

    <sw-loader v-if="isLoading"></sw-loader>
</sw-modal>

{% endblock %}
