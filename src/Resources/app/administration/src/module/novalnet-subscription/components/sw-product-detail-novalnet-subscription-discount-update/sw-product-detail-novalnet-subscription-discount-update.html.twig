{% block novalnet_subscription_product_discount_update %}
    <sw-modal :title="$tc('novalnet-subscription.settingForm.updatedDiscountTitle')"
              @modal-close="closeModal">
		
			{% block novalnet_subscription_product_discount_update_content %}
				<template #default>

					{% block novalnet_subscription_product_discount_update_info_text %}
						
						<sw-container >
							<sw-text-field 
								v-model="cycle"
								:disabled="true"
								:allowEmpty="false"
								:helpText="$tc('novalnet-subscription.settingForm.productSettings.renewalIntervalHelpText')"
								:label="$tc('novalnet-subscription.settingForm.period')"
								required>
							</sw-text-field>
						</sw-container>
						
					    <sw-container >
							<sw-single-select v-model="discountType"
								labelProperty="name"
								valueProperty="id"
								:options="discountTypeOptions" 
								:label="$tc('novalnet-subscription.settingForm.productSettings.discountTypeTitle')"
								@change="updateDiscountType"
								required>
						    </sw-single-select>
						</sw-container>
						<sw-container>
							<sw-field type="number"  
								v-model ="discountValue"
								:label="$tc('novalnet-subscription.settingForm.productSettings.discountAmount')"
								:max="maxDiscountValue"
								:min="1"
								:allowEmpty="false"
								required
							>
								<template #suffix>
									<span v-if="isPercentageType">%</span>
									<span v-else>{{ maxValueSuffix }}</span>
								</template>
							</sw-field>
							
						</sw-container>
					{% endblock %}
				</template>
			{% endblock %}

			{% block novalnet_subscription_product_discount_setting_actions %}
				<template #modal-footer>

					{% block novalnet_subscription_product_discount_setting_confirm %}
						<sw-button secondary slim variant="primary" @click="novalnetdiscount" >
							{{ $tc('novalnet-subscription.settingForm.productSettings.updateDiscountbutton') }}
						</sw-button>
					{% endblock %}
				</template>
			{% endblock %}
    </sw-modal>
{% endblock %}
